{
    "name": "chgk/sphinx-bundle",
    "type": "symfony-bundle",
    "description": "Provides integration of Sphinx search engine with Symfony using SphinxQL",
    "keywords": ["sphinx", "sphinxql", "search", "symfony", "symfony2", "doctrine2"],
    "homepage": "https://github.com/javer/JaverSphinxBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Vadim Borodavko",
            "email": "vadim.borodavko@gmail.com",
            "homepage": "https://github.com/javer"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-pdo": "*"
    },
    "require-dev": {
        "behat/behat": "^3.7",
        "behat/symfony2-extension": "2.1.*",
        "doctrine/dbal": "^2.9",
        "doctrine/orm": "^2.7",
        "knplabs/knp-components": "^1.3 || ^2.0",
        "phpunit/phpunit": "^7.0 || ^8.0 || ^9.0",
        "psr/log": "^1.0",
        "squizlabs/php_codesniffer": "3.5.*",
        "swivl/php-coding-standard": "^1.0",
        "symfony/config": "^2.8 || ^3.0 || ^4.0 || ^5.0",
        "symfony/dependency-injection": "^2.8 || ^3.0 || ^4.0 || ^5.0",
        "symfony/event-dispatcher": "^2.8 || ^3.0 || ^4.0 || ^5.0",
        "symfony/http-foundation": "^2.8 || ^3.0 || ^4.0 || ^5.0",
        "symfony/http-kernel": "^2.8 || ^3.0 || ^4.0 || ^5.0"
    },
    "suggest": {
        "doctrine/orm": "to allow usage with Doctrine ORM",
        "knplabs/knp-paginator-bundle": "to allow usage with Knp Paginator",
        "behat/behat": "to be able to test search",
        "behat/symfony2-extension": "to be able to test search"
    },
    "autoload": {
        "psr-4": {
            "Javer\\SphinxBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2.x-dev"
        }
    }
}
